{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "strictNullChecks": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs" 
        }
    }
}
